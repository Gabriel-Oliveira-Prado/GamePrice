@{
    ViewData["Title"] = "GamePrice - O Melhor Preço para seu Jogo";
}
<!-- Hero Section -->
<section class="hero-section text-center">
    <div class="hero-animation-container" id="hero-animation"></div>
    <div class="container position-relative z-1">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="badge glass-effect text-primary px-3 py-2 rounded-pill mb-4 fade-in-up">
                    <span class="pulse-dot"></span> Monitoramento em Tempo Real
                </div>
                <h1 class="hero-title text-white mb-4 fade-in-up">
                    Não pague mais caro.<br>Encontre o <span class="text-gradient">menor preço</span>.
                </h1>
                <p class="lead text-muted mb-5 fade-in-up" style="max-width: 700px; margin: 0 auto;">Comparamos preços da Steam, Epic Games, PS Store, Xbox e Nintendo Eshop em segundos. Receba alertas de promoções imperdíveis.</p>
                <div class="search-container fade-in-up">
                    <div class="position-relative">
                        <input type="text" class="search-input" placeholder="Qual jogo você está procurando?">
                        <button class="search-btn" type="button"><i class="fas fa-search"></i></button>
                    </div>

                    <!-- Search Results Container -->
                    <div id="search-results" class="mt-3 text-start" style="display: none;"></div>
                </div>
                <div class="mt-5 d-flex justify-content-center gap-4 small fade-in-up">
                    <span class="stat-item gs-reveal"><i class="fas fa-store text-primary me-1"></i> <strong>+<span class="counter" data-target="50">0</span></strong> Lojas</span>
                    <span class="stat-item gs-reveal"><i class="fas fa-history text-primary me-1"></i> Histórico de <strong><span class="counter" data-target="365">0</span> dias</strong></span>
                    <span class="stat-item gs-reveal"><i class="fas fa-envelope text-primary me-1"></i> Alertas via <strong>Email</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>
