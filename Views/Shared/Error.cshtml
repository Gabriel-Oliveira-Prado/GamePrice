@model ErrorViewModel
@{
    ViewData["Title"] = "Erro - GamePrice";
}

<section class="hero-section">
    <div class="container position-relative z-1">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="glass-effect p-5 rounded-4 text-center position-relative overflow-hidden gs-reveal">
                    <!-- Ícone Temático -->
                    <div class="mb-4 text-primary">
                        <i class="fas fa-robot fa-5x mb-3"></i>
                    </div>

                    <h1 class="fw-bold text-white mb-3">Oops! Erro Detectado</h1>
                    <p class="lead text-muted mb-4">
                        Parece que encontramos um <em>glitch</em> no sistema. Tente novamente ou volte para a página inicial.
                    </p>

                    @if (Model != null && Model.ShowRequestId)
                    {
                        <div class="p-3 rounded-3 bg-black bg-opacity-25 mb-4 d-inline-block text-start">
                            <small class="text-muted d-block text-uppercase fw-bold mb-1" style="font-size: 0.7rem; letter-spacing: 1px;">Código do Erro (Request ID)</small>
                            <code class="text-primary">@Model.RequestId</code>
                        </div>
                        <br />
                    }

                    <div class="d-flex justify-content-center gap-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-glow rounded-pill px-4">
                            <i class="fas fa-undo me-2"></i>Voltar ao Início
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>